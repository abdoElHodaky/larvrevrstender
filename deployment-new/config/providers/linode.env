# Linode Provider Configuration for Reverse Tender Platform

# Cloud Provider
CLOUD_PROVIDER=linode

# Linode Configuration
LINODE_TOKEN=${LINODE_TOKEN}
LINODE_REGION=${LINODE_REGION:-us-east}
LINODE_TYPE=${LINODE_TYPE:-g6-standard-4}

# Kubernetes Configuration
K8S_VERSION=${K8S_VERSION:-1.29}
K8S_NODE_COUNT=${K8S_NODE_COUNT:-3}
K8S_MIN_NODES=${K8S_MIN_NODES:-2}
K8S_MAX_NODES=${K8S_MAX_NODES:-10}

# Database Configuration
DB_ENGINE=mysql
DB_VERSION=8.0
DB_TYPE=${LINODE_DB_TYPE:-g6-nanode-1}
DB_NODE_COUNT=${LINODE_DB_NODE_COUNT:-2}
DB_CLUSTER_SIZE=${LINODE_DB_CLUSTER_SIZE:-3}

# Redis Configuration
REDIS_VERSION=7.0
REDIS_TYPE=${LINODE_REDIS_TYPE:-g6-nanode-1}
REDIS_NODE_COUNT=${LINODE_REDIS_NODE_COUNT:-1}

# Load Balancer Configuration
LB_ALGORITHM=${LINODE_LB_ALGORITHM:-roundrobin}
LB_HEALTH_CHECK_PATH=/health
LB_HEALTH_CHECK_PROTOCOL=http
LB_HEALTH_CHECK_INTERVAL=30
LB_HEALTH_CHECK_TIMEOUT=5
LB_HEALTH_CHECK_ATTEMPTS=3

# VPC Configuration
VPC_LABEL=${LINODE_VPC_LABEL:-reverse-tender-vpc}
VPC_DESCRIPTION="Reverse Tender Platform VPC"

# Storage Configuration
VOLUME_SIZE=${LINODE_VOLUME_SIZE:-100}
VOLUME_LABEL=${LINODE_VOLUME_LABEL:-reverse-tender-storage}

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=${LINODE_BACKUP_SCHEDULE:-W0SU0400}
BACKUP_RETENTION=${LINODE_BACKUP_RETENTION:-7}

# Monitoring Configuration
MONITORING_ENABLED=true
ALERTS_ENABLED=true
LONGVIEW_ENABLED=true

# Firewall Configuration
FIREWALL_ENABLED=true
FIREWALL_LABEL=${LINODE_FIREWALL_LABEL:-reverse-tender-firewall}
ALLOWED_IPS=${LINODE_ALLOWED_IPS:-0.0.0.0/0}

# SSL Configuration
SSL_CERTIFICATE_TYPE=${LINODE_SSL_TYPE:-lets_encrypt}
DOMAIN_NAME=${DOMAIN_NAME:-reversetender.com}

# Scaling Configuration
AUTO_SCALING_ENABLED=true
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20

# Networking
PRIVATE_IP_ENABLED=true
VLAN_ENABLED=false

# Object Storage
OBJECT_STORAGE_CLUSTER=${LINODE_OBJECT_STORAGE_CLUSTER:-us-east-1}
OBJECT_STORAGE_BUCKET=${LINODE_OBJECT_STORAGE_BUCKET:-reverse-tender-storage}

# CDN Configuration
CDN_ENABLED=${LINODE_CDN_ENABLED:-false}

# NodeBalancer Configuration
NODEBALANCER_LABEL=${LINODE_NODEBALANCER_LABEL:-reverse-tender-lb}
NODEBALANCER_CLIENT_CONN_THROTTLE=20
NODEBALANCER_PROTOCOL=http
NODEBALANCER_ALGORITHM=roundrobin
NODEBALANCER_STICKINESS=none

# Tags
RESOURCE_TAGS=${LINODE_RESOURCE_TAGS:-environment:${APP_ENV},project:reverse-tender,managed-by:terraform}

# Cost Optimization
COST_OPTIMIZATION_ENABLED=true
SCHEDULED_SCALING_ENABLED=false

# Security
PRIVATE_NETWORKING_ENABLED=true
ROOT_PASSWORD_ENABLED=false
SSH_KEY_ENABLED=true

# Maintenance
MAINTENANCE_WINDOW_DAY=${LINODE_MAINTENANCE_DAY:-sunday}
MAINTENANCE_WINDOW_HOUR=${LINODE_MAINTENANCE_HOUR:-04:00}

# High Availability
HA_ENABLED=${LINODE_HA_ENABLED:-true}
MULTI_REGION_ENABLED=${LINODE_MULTI_REGION_ENABLED:-false}

# Compliance
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true
GDPR_COMPLIANT=true
SOC2_COMPLIANT=true

# Performance
SSD_STORAGE=true
DEDICATED_CPU=${LINODE_DEDICATED_CPU:-false}
NETWORK_PERFORMANCE=${LINODE_NETWORK_PERFORMANCE:-standard}

