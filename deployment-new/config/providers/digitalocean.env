# DigitalOcean Provider Configuration for Reverse Tender Platform

# Cloud Provider
CLOUD_PROVIDER=digitalocean

# DigitalOcean Configuration
DO_TOKEN=${DIGITALOCEAN_TOKEN}
DO_REGION=${DO_REGION:-fra1}
DO_SIZE=${DO_SIZE:-s-4vcpu-8gb}

# Kubernetes Configuration
K8S_VERSION=${K8S_VERSION:-1.29}
K8S_NODE_COUNT=${K8S_NODE_COUNT:-3}
K8S_MIN_NODES=${K8S_MIN_NODES:-2}
K8S_MAX_NODES=${K8S_MAX_NODES:-10}

# Database Configuration
DB_ENGINE=mysql
DB_VERSION=8
DB_SIZE=${DO_DB_SIZE:-db-s-2vcpu-4gb}
DB_NODE_COUNT=${DO_DB_NODE_COUNT:-2}

# Redis Configuration
REDIS_VERSION=7
REDIS_SIZE=${DO_REDIS_SIZE:-db-s-1vcpu-1gb}
REDIS_NODE_COUNT=${DO_REDIS_NODE_COUNT:-1}

# Load Balancer Configuration
LB_ALGORITHM=${DO_LB_ALGORITHM:-round_robin}
LB_HEALTH_CHECK_PATH=/health
LB_HEALTH_CHECK_PROTOCOL=http

# VPC Configuration
VPC_IP_RANGE=${DO_VPC_IP_RANGE:-10.10.0.0/16}

# Storage Configuration
VOLUME_SIZE=${DO_VOLUME_SIZE:-100}
VOLUME_TYPE=${DO_VOLUME_TYPE:-ext4}

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_HOUR=${DO_BACKUP_HOUR:-2}
BACKUP_RETENTION=${DO_BACKUP_RETENTION:-7}

# Monitoring Configuration
MONITORING_ENABLED=true
ALERTS_ENABLED=true

# Firewall Configuration
FIREWALL_ENABLED=true
ALLOWED_IPS=${DO_ALLOWED_IPS:-0.0.0.0/0}

# SSL Configuration
SSL_CERTIFICATE_TYPE=${DO_SSL_TYPE:-lets_encrypt}
DOMAIN_NAME=${DOMAIN_NAME:-reversetender.com}

# Scaling Configuration
AUTO_SCALING_ENABLED=true
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20

# Networking
PROXY_PROTOCOL_ENABLED=true
STICKY_SESSIONS_ENABLED=false

# Container Registry
REGISTRY_NAME=${DO_REGISTRY_NAME:-reverse-tender-registry}
REGISTRY_REGION=${DO_REGISTRY_REGION:-fra1}

# Spaces (Object Storage)
SPACES_NAME=${DO_SPACES_NAME:-reverse-tender-storage}
SPACES_REGION=${DO_SPACES_REGION:-fra1}
SPACES_ENDPOINT=${DO_SPACES_ENDPOINT:-fra1.digitaloceanspaces.com}

# CDN Configuration
CDN_ENABLED=${DO_CDN_ENABLED:-true}
CDN_TTL=${DO_CDN_TTL:-3600}

# Reserved IP
RESERVED_IP_ENABLED=${DO_RESERVED_IP_ENABLED:-true}

# Tags
RESOURCE_TAGS=${DO_RESOURCE_TAGS:-environment:${APP_ENV},project:reverse-tender,managed-by:terraform}

# Cost Optimization
COST_OPTIMIZATION_ENABLED=true
SCHEDULED_SCALING_ENABLED=false

# Security
PRIVATE_NETWORKING_ENABLED=true
VPC_PEERING_ENABLED=false

# Maintenance
MAINTENANCE_WINDOW_DAY=${DO_MAINTENANCE_DAY:-sunday}
MAINTENANCE_WINDOW_HOUR=${DO_MAINTENANCE_HOUR:-04:00}

