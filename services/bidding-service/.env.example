APP_NAME="Reverse Tender Bidding Service"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8004

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=reverse_tender_bidding
DB_USERNAME=bidding_user
DB_PASSWORD=bidding_password

BROADCAST_DRIVER=reverb
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="bidding@reversetender.com"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000
SANCTUM_TOKEN_EXPIRATION=60
SANCTUM_TOKEN_PREFIX=

# Laravel Reverb Configuration (Real-time WebSocket)
REVERB_APP_ID=reversetender
REVERB_APP_KEY=reversetender-key
REVERB_APP_SECRET=reversetender-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Pusher Configuration (Fallback)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Service Discovery
API_GATEWAY_URL=http://localhost:8000
AUTH_SERVICE_URL=http://localhost:8001
ORDER_SERVICE_URL=http://localhost:8002
USER_SERVICE_URL=http://localhost:8003
NOTIFICATION_SERVICE_URL=http://localhost:8005
PAYMENT_SERVICE_URL=http://localhost:8007

# Bidding Configuration
DEFAULT_BID_EXPIRY_HOURS=72
MIN_BID_AMOUNT=50
MAX_BID_AMOUNT=50000
AUTO_BID_ENABLED=true
BID_INCREMENT_PERCENTAGE=5
MAX_BIDS_PER_ORDER=100

# Real-time Features
WEBSOCKET_ENABLED=true
REAL_TIME_NOTIFICATIONS=true
BID_UPDATE_INTERVAL=5

# Auto-bidding Configuration
AUTO_BID_MAX_ATTEMPTS=10
AUTO_BID_DELAY_SECONDS=30
AUTO_BID_CONFIDENCE_THRESHOLD=0.7

# Rate Limiting
BID_RATE_LIMIT_PER_MINUTE=10
MESSAGE_RATE_LIMIT_PER_MINUTE=20
AUTO_BID_RATE_LIMIT_PER_HOUR=50

# Monitoring
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# External APIs
MERCHANT_VERIFICATION_API=
PART_PRICING_API=
