APP_NAME="Reverse Tender Order Service"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8002

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=reverse_tender_orders
DB_USERNAME=order_user
DB_PASSWORD=order_password

BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="orders@reversetender.com"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000
SANCTUM_TOKEN_EXPIRATION=60
SANCTUM_TOKEN_PREFIX=

# File Upload Configuration
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
MAX_IMAGES_PER_ORDER=10

# Real-time Updates
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Service Discovery
API_GATEWAY_URL=http://localhost:8000
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8003
BIDDING_SERVICE_URL=http://localhost:8004
NOTIFICATION_SERVICE_URL=http://localhost:8005
VIN_OCR_SERVICE_URL=http://localhost:8006

# Order Configuration
DEFAULT_ORDER_EXPIRY_HOURS=168
MIN_BUDGET_AMOUNT=100
MAX_BUDGET_AMOUNT=100000
AUTO_PUBLISH_ENABLED=true
URGENT_ORDER_MULTIPLIER=1.5

# Image Processing
IMAGE_QUALITY=85
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
LARGE_IMAGE_WIDTH=1200
LARGE_IMAGE_HEIGHT=1200

# Monitoring
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# External APIs
GOOGLE_MAPS_API_KEY=
GEOCODING_ENABLED=true
