# Production Environment Configuration
# Reverse Tender Platform - Saudi Arabia

APP_NAME="Reverse Tender Platform"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_FOR_PRODUCTION
APP_DEBUG=false
APP_URL=https://reversetender.sa
APP_TIMEZONE=Asia/Riyadh
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en

# Database Configuration - Primary
DB_CONNECTION=mysql
DB_HOST=reversetender-db-primary.cluster-xyz.rds.amazonaws.com
DB_PORT=3306
DB_DATABASE=reversetender_production
DB_USERNAME=reversetender_user
DB_PASSWORD=${DB_PASSWORD}

# Database Configuration - Read Replica
DB_READ_HOST=reversetender-db-replica.cluster-xyz.rds.amazonaws.com

# Redis Configuration
REDIS_HOST=reversetender-redis.cluster.cache.amazonaws.com
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=ses
MAIL_HOST=email-smtp.me-south-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=${AWS_SES_USERNAME}
MAIL_PASSWORD=${AWS_SES_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@reversetender.sa
MAIL_FROM_NAME="Reverse Tender Platform"

# AWS Configuration
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=me-south-1
AWS_BUCKET=reversetender-storage-prod
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment Gateway Configuration
# Stripe
STRIPE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# PayPal
PAYPAL_CLIENT_ID=${PAYPAL_CLIENT_ID}
PAYPAL_CLIENT_SECRET=${PAYPAL_CLIENT_SECRET}
PAYPAL_MODE=live

# Mada (Saudi Arabia)
MADA_MERCHANT_ID=${MADA_MERCHANT_ID}
MADA_API_KEY=${MADA_API_KEY}
MADA_ENDPOINT=https://api.mada.sa/v1

# STC Pay (Saudi Arabia)
STC_PAY_MERCHANT_ID=${STC_PAY_MERCHANT_ID}
STC_PAY_API_KEY=${STC_PAY_API_KEY}
STC_PAY_ENDPOINT=https://api.stcpay.com.sa/v1

# OCR Services Configuration
# Google Cloud Vision
GOOGLE_CLOUD_PROJECT_ID=${GOOGLE_CLOUD_PROJECT_ID}
GOOGLE_CLOUD_KEY_FILE=/app/storage/credentials/google-cloud-key.json

# AWS Textract
AWS_TEXTRACT_REGION=me-south-1

# Azure Computer Vision
AZURE_COMPUTER_VISION_ENDPOINT=${AZURE_COMPUTER_VISION_ENDPOINT}
AZURE_COMPUTER_VISION_KEY=${AZURE_COMPUTER_VISION_KEY}

# ZATCA Configuration (Saudi Arabia)
ZATCA_ENVIRONMENT=production
ZATCA_API_URL=https://api.zatca.gov.sa/v1
ZATCA_CERTIFICATE_PATH=/app/storage/certificates/zatca-prod.pem
ZATCA_PRIVATE_KEY_PATH=/app/storage/certificates/zatca-prod-key.pem
ZATCA_TAXPAYER_ID=${ZATCA_TAXPAYER_ID}

# SMS Configuration (Saudi Arabia)
SMS_PROVIDER=unifonic
UNIFONIC_APP_SID=${UNIFONIC_APP_SID}
UNIFONIC_SENDER_ID="ReverseT"

# Push Notifications
FCM_SERVER_KEY=${FCM_SERVER_KEY}
FCM_SENDER_ID=${FCM_SENDER_ID}

# Monitoring and Logging
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_LEVEL=info
LOG_SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# New Relic Monitoring
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
NEW_RELIC_APP_NAME="Reverse Tender Platform"

# Sentry Error Tracking
SENTRY_LARAVEL_DSN=${SENTRY_DSN}
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_API=1000
RATE_LIMIT_WEB=60

# Security
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# Company Information
COMPANY_NAME="Reverse Tender Platform"
COMPANY_ADDRESS_AR="الرياض، المملكة العربية السعودية"
COMPANY_ADDRESS_EN="Riyadh, Saudi Arabia"
COMPANY_PHONE="+966-11-123-4567"
COMPANY_EMAIL="info@reversetender.sa"
COMPANY_WEBSITE="https://reversetender.sa"
COMPANY_TAX_NUMBER="123456789012345"

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5.0
VAT_PERCENTAGE=15.0
DEFAULT_CURRENCY=SAR
SUPPORTED_CURRENCIES=SAR,USD,EUR

# File Upload Limits
MAX_FILE_SIZE=10240
MAX_IMAGES_PER_REQUEST=10
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_THROTTLE_REQUESTS=60
API_THROTTLE_MINUTES=1

