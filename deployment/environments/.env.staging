# Staging Environment Configuration
# Reverse Tender Platform - Saudi Arabia

APP_NAME="Reverse Tender Platform (Staging)"
APP_ENV=staging
APP_KEY=base64:GENERATE_NEW_KEY_FOR_STAGING
APP_DEBUG=true
APP_URL=https://staging.reversetender.sa
APP_TIMEZONE=Asia/Riyadh
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=reversetender-db-staging.cluster-xyz.rds.amazonaws.com
DB_PORT=3306
DB_DATABASE=reversetender_staging
DB_USERNAME=reversetender_staging_user
DB_PASSWORD=${DB_STAGING_PASSWORD}

# Redis Configuration
REDIS_HOST=reversetender-redis-staging.cache.amazonaws.com
REDIS_PASSWORD=${REDIS_STAGING_PASSWORD}
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration (Using Mailtrap for staging)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=${MAILTRAP_USERNAME}
MAIL_PASSWORD=${MAILTRAP_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=staging@reversetender.sa
MAIL_FROM_NAME="Reverse Tender Platform (Staging)"

# AWS Configuration
AWS_ACCESS_KEY_ID=${AWS_STAGING_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_STAGING_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=me-south-1
AWS_BUCKET=reversetender-storage-staging
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment Gateway Configuration (Test Mode)
# Stripe Test
STRIPE_KEY=${STRIPE_TEST_PUBLISHABLE_KEY}
STRIPE_SECRET=${STRIPE_TEST_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_TEST_WEBHOOK_SECRET}

# PayPal Sandbox
PAYPAL_CLIENT_ID=${PAYPAL_SANDBOX_CLIENT_ID}
PAYPAL_CLIENT_SECRET=${PAYPAL_SANDBOX_CLIENT_SECRET}
PAYPAL_MODE=sandbox

# Mada Test Environment
MADA_MERCHANT_ID=${MADA_TEST_MERCHANT_ID}
MADA_API_KEY=${MADA_TEST_API_KEY}
MADA_ENDPOINT=https://test-api.mada.sa/v1

# STC Pay Test Environment
STC_PAY_MERCHANT_ID=${STC_PAY_TEST_MERCHANT_ID}
STC_PAY_API_KEY=${STC_PAY_TEST_API_KEY}
STC_PAY_ENDPOINT=https://test-api.stcpay.com.sa/v1

# OCR Services Configuration (Same as production)
GOOGLE_CLOUD_PROJECT_ID=${GOOGLE_CLOUD_PROJECT_ID}
GOOGLE_CLOUD_KEY_FILE=/app/storage/credentials/google-cloud-key.json

AWS_TEXTRACT_REGION=me-south-1

AZURE_COMPUTER_VISION_ENDPOINT=${AZURE_COMPUTER_VISION_ENDPOINT}
AZURE_COMPUTER_VISION_KEY=${AZURE_COMPUTER_VISION_KEY}

# ZATCA Configuration (Test Environment)
ZATCA_ENVIRONMENT=sandbox
ZATCA_API_URL=https://sandbox-api.zatca.gov.sa/v1
ZATCA_CERTIFICATE_PATH=/app/storage/certificates/zatca-test.pem
ZATCA_PRIVATE_KEY_PATH=/app/storage/certificates/zatca-test-key.pem
ZATCA_TAXPAYER_ID=${ZATCA_TEST_TAXPAYER_ID}

# SMS Configuration (Test)
SMS_PROVIDER=log
UNIFONIC_APP_SID=${UNIFONIC_TEST_APP_SID}
UNIFONIC_SENDER_ID="ReverseT"

# Push Notifications (Test)
FCM_SERVER_KEY=${FCM_TEST_SERVER_KEY}
FCM_SENDER_ID=${FCM_TEST_SENDER_ID}

# Monitoring and Logging
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=${SLACK_STAGING_WEBHOOK_URL}

# Sentry Error Tracking
SENTRY_LARAVEL_DSN=${SENTRY_STAGING_DSN}
SENTRY_TRACES_SAMPLE_RATE=1.0

# Rate Limiting (More lenient for testing)
RATE_LIMIT_API=5000
RATE_LIMIT_WEB=300

# Security
BCRYPT_ROUNDS=10
HASH_VERIFY=true

# Company Information
COMPANY_NAME="Reverse Tender Platform (Staging)"
COMPANY_ADDRESS_AR="الرياض، المملكة العربية السعودية"
COMPANY_ADDRESS_EN="Riyadh, Saudi Arabia"
COMPANY_PHONE="+966-11-123-4567"
COMPANY_EMAIL="staging@reversetender.sa"
COMPANY_WEBSITE="https://staging.reversetender.sa"
COMPANY_TAX_NUMBER="123456789012345"

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5.0
VAT_PERCENTAGE=15.0
DEFAULT_CURRENCY=SAR
SUPPORTED_CURRENCIES=SAR,USD,EUR

# File Upload Limits
MAX_FILE_SIZE=10240
MAX_IMAGES_PER_REQUEST=10
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=5000
API_THROTTLE_REQUESTS=300
API_THROTTLE_MINUTES=1

