# Base Configuration for Reverse Tender Platform
# This file contains common configuration variables used across all environments

# Application Configuration
APP_NAME="Reverse Tender Platform"
APP_VERSION=latest
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Database Configuration
DB_CONNECTION=mysql
DB_PORT=3306
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis Configuration
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Broadcasting Configuration
BROADCAST_DRIVER=reverb

# Mail Configuration
MAIL_MAILER=smtp
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@reversetender.com
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem Configuration
FILESYSTEM_DISK=s3

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Security Configuration
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# API Configuration
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# JWT Configuration
JWT_ALGO=RS256
JWT_TTL=900
REFRESH_TTL=43200

# OTP Configuration
OTP_EXPIRY=300
OTP_LENGTH=6

# File Upload Configuration
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Service Ports (for Docker Compose)
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8001
BIDDING_SERVICE_PORT=8002
USER_SERVICE_PORT=8003
ORDER_SERVICE_PORT=8004
NOTIFICATION_SERVICE_PORT=8005
PAYMENT_SERVICE_PORT=8006
ANALYTICS_SERVICE_PORT=8007
VIN_OCR_SERVICE_PORT=8008

# Infrastructure Ports
MYSQL_PORT=3306
REDIS_PORT=6379
HTTP_PORT=80
HTTPS_PORT=443
REVERB_PORT=8080

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Database Names
DB_DATABASE=reverse_tender
AUTH_DB_DATABASE=reverse_tender_auth
BIDDING_DB_DATABASE=reverse_tender_bidding
USER_DB_DATABASE=reverse_tender_users
ORDER_DB_DATABASE=reverse_tender_orders
NOTIFICATION_DB_DATABASE=reverse_tender_notifications
PAYMENT_DB_DATABASE=reverse_tender_payments
ANALYTICS_DB_DATABASE=reverse_tender_analytics
VIN_OCR_DB_DATABASE=reverse_tender_vehicles

# Laravel Reverb Configuration
REVERB_APP_ID=reverse-tender
REVERB_APP_KEY=reverse-tender-key
REVERB_APP_SECRET=reverse-tender-secret
REVERB_HOST=0.0.0.0
REVERB_SCHEME=https

# Feature Flags
RATE_LIMIT_ENABLED=true
TESSERACT_ENABLED=true
MONITORING_ENABLED=true
BACKUP_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

