# Development Environment Configuration for Reverse Tender Platform

# Application Configuration
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
LOG_LEVEL=debug

# Database Configuration
DB_HOST=mysql-primary
DB_USERNAME=developer
DB_PASSWORD=developer

# Redis Configuration
REDIS_HOST=redis-primary
REDIS_PASSWORD=redis

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root

# Security Configuration (Development keys - NOT for production)
JWT_SECRET=dev-jwt-secret-key-not-for-production
APP_KEY=base64:dev-app-key-not-for-production

# Third-party Services (Mock/Local)
TWILIO_SID=dev_twilio_sid
TWILIO_TOKEN=dev_twilio_token
SENDGRID_API_KEY=dev_sendgrid_key

# Cloud Storage (Local/MinIO)
S3_BUCKET=dev-reverse-tender
S3_ACCESS_KEY=dev_access_key
S3_SECRET_KEY=dev_secret_key
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000

# Payment Gateway (Mock)
ZATCA_API_URL=http://localhost:8090/mock-zatca
ZATCA_API_KEY=dev_zatca_key
ZATCA_CERTIFICATE=dev_certificate
PAYMENT_GATEWAY_URL=http://localhost:8091/mock-payment
PAYMENT_GATEWAY_KEY=dev_payment_key

# Push Notifications (Mock)
FCM_SERVER_KEY=dev_fcm_key
APNS_KEY_ID=dev_apns_key
APNS_TEAM_ID=dev_apns_team

# Google Cloud Services (Mock)
GOOGLE_CLOUD_VISION_KEY=dev_vision_key

# Monitoring
GRAFANA_PASSWORD=admin
GRAFANA_ADMIN_USER=admin

# SSL Configuration
SSL_ENABLED=false

# Performance Configuration
OPCACHE_ENABLED=false
REDIS_MAXMEMORY=128mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Backup Configuration
BACKUP_ENABLED=false

# Rate Limiting (Very permissive for development)
API_RATE_LIMIT=10000
API_RATE_LIMIT_WINDOW=1

# Session Configuration
SESSION_LIFETIME=720
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# CORS Configuration (Very permissive for development)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=*
CORS_ALLOWED_HEADERS=*

# Error Reporting
ERROR_REPORTING_ENABLED=false

# Development Tools
MAILHOG_ENABLED=true
PHPMYADMIN_ENABLED=true
REDIS_COMMANDER_ENABLED=true

# Testing Configuration
TESTING_ENABLED=true
MOCK_EXTERNAL_SERVICES=true
FAKE_NOTIFICATIONS=true
SEED_DATABASE=true

# Development Debugging
TELESCOPE_ENABLED=true
HORIZON_ENABLED=true
DEBUGBAR_ENABLED=true
QUERY_LOG_ENABLED=true

# Hot Reload Configuration
HOT_RELOAD_ENABLED=true
WATCH_FILES=true

# Development Ports
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
PHPMYADMIN_PORT=8080
REDIS_COMMANDER_PORT=8081
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

