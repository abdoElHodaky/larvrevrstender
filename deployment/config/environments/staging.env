# Staging Environment Configuration for Reverse Tender Platform

# Application Configuration
APP_ENV=staging
APP_DEBUG=true
APP_URL=https://staging.reversetender.com
LOG_LEVEL=debug

# Database Configuration
DB_HOST=mysql-primary
DB_USERNAME=staging_user
DB_PASSWORD=${STAGING_DB_PASSWORD}

# Redis Configuration
REDIS_HOST=redis-primary
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# MySQL Configuration
MYSQL_ROOT_PASSWORD=${STAGING_MYSQL_ROOT_PASSWORD}

# Security Configuration
JWT_SECRET=${STAGING_JWT_SECRET}
APP_KEY=${STAGING_APP_KEY}

# Third-party Services (Sandbox/Test)
TWILIO_SID=${STAGING_TWILIO_SID}
TWILIO_TOKEN=${STAGING_TWILIO_TOKEN}
SENDGRID_API_KEY=${STAGING_SENDGRID_API_KEY}

# Cloud Storage (Staging bucket)
S3_BUCKET=${STAGING_S3_BUCKET}
S3_ACCESS_KEY=${STAGING_S3_ACCESS_KEY}
S3_SECRET_KEY=${STAGING_S3_SECRET_KEY}
S3_REGION=${STAGING_S3_REGION}

# Payment Gateway (Sandbox)
ZATCA_API_URL=${STAGING_ZATCA_API_URL}
ZATCA_API_KEY=${STAGING_ZATCA_API_KEY}
ZATCA_CERTIFICATE=${STAGING_ZATCA_CERTIFICATE}
PAYMENT_GATEWAY_URL=${STAGING_PAYMENT_GATEWAY_URL}
PAYMENT_GATEWAY_KEY=${STAGING_PAYMENT_GATEWAY_KEY}

# Push Notifications (Test)
FCM_SERVER_KEY=${STAGING_FCM_SERVER_KEY}
APNS_KEY_ID=${STAGING_APNS_KEY_ID}
APNS_TEAM_ID=${STAGING_APNS_TEAM_ID}

# Google Cloud Services (Test)
GOOGLE_CLOUD_VISION_KEY=${STAGING_GOOGLE_CLOUD_VISION_KEY}

# Monitoring
GRAFANA_PASSWORD=${STAGING_GRAFANA_PASSWORD}
GRAFANA_ADMIN_USER=staging_admin

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/staging.reversetender.crt
SSL_KEY_PATH=/etc/ssl/private/staging.reversetender.key

# Performance Configuration
OPCACHE_ENABLED=false
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 4 * * *"
BACKUP_RETENTION_DAYS=7

# Rate Limiting (More permissive for testing)
API_RATE_LIMIT=500
API_RATE_LIMIT_WINDOW=1

# Session Configuration
SESSION_LIFETIME=240
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# CORS Configuration (More permissive for testing)
CORS_ALLOWED_ORIGINS=https://staging.reversetender.com,http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-Debug-Token

# Error Reporting
SENTRY_DSN=${STAGING_SENTRY_DSN}
ERROR_REPORTING_ENABLED=true

# Testing Configuration
TESTING_ENABLED=true
MOCK_EXTERNAL_SERVICES=true
FAKE_NOTIFICATIONS=true

