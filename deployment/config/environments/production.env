# Production Environment Configuration for Reverse Tender Platform

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://reversetender.com
LOG_LEVEL=warning

# Database Configuration
DB_HOST=mysql-primary
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# Redis Configuration
REDIS_HOST=redis-primary
REDIS_PASSWORD=${REDIS_PASSWORD}

# MySQL Configuration
MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}

# Security Configuration
JWT_SECRET=${JWT_SECRET}
APP_KEY=${APP_KEY}

# Third-party Services
TWILIO_SID=${TWILIO_SID}
TWILIO_TOKEN=${TWILIO_TOKEN}
SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Cloud Storage
S3_BUCKET=${S3_BUCKET}
S3_ACCESS_KEY=${S3_ACCESS_KEY}
S3_SECRET_KEY=${S3_SECRET_KEY}
S3_REGION=${S3_REGION}

# Payment Gateway
ZATCA_API_URL=${ZATCA_API_URL}
ZATCA_API_KEY=${ZATCA_API_KEY}
ZATCA_CERTIFICATE=${ZATCA_CERTIFICATE}
PAYMENT_GATEWAY_URL=${PAYMENT_GATEWAY_URL}
PAYMENT_GATEWAY_KEY=${PAYMENT_GATEWAY_KEY}

# Push Notifications
FCM_SERVER_KEY=${FCM_SERVER_KEY}
APNS_KEY_ID=${APNS_KEY_ID}
APNS_TEAM_ID=${APNS_TEAM_ID}

# Google Cloud Services
GOOGLE_CLOUD_VISION_KEY=${GOOGLE_CLOUD_VISION_KEY}

# Monitoring
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
GRAFANA_ADMIN_USER=admin

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/reversetender.crt
SSL_KEY_PATH=/etc/ssl/private/reversetender.key

# Performance Configuration
OPCACHE_ENABLED=true
REDIS_MAXMEMORY=1gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=1

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://reversetender.com,https://www.reversetender.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Error Reporting
SENTRY_DSN=${SENTRY_DSN}
ERROR_REPORTING_ENABLED=true

